{
	"manifest_version": 2,
	
	"name": "Blockade!",
	"description": "This extension helps blockades specific distractions on specific sites like Facebook",
	"version": "3.2",
	
	
	"options_page": "options.html",
	
	"browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
	
	"icons": { 
        "16" : "icon16.png",
        "48" : "icon48.png",
        "128" : "icon128.png"
    },
    
	"permissions": [
      "storage", "activeTab"
    ],
	
    "content_scripts": [{
        "js": ["blockade.js"],
        "matches": ["<all_urls>"]
    }],
    
	"web_accessible_resources": [
	    "images/*.png"
	]
}